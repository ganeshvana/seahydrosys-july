<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       <record id="inherit_view_purchase_form" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page[@name='purchase_delivery_invoice']/group/group/field[@name='fiscal_position_id']" position="after">
                    <field name="tax_country_id"/>
                    <field name="despatch_through"/>
                    <field name="sail_date"/>
                </xpath>
                <field name="date_order" position="after">
                    <field name="due_date"/>
                </field>
             
            </field>
        </record>

    <record id="view_inherit_partner_vendor" model="ir.ui.view">
         <field name="name">view.inherit.partner</field>
         <field name="model">purchase.order</field>
         <field name="inherit_id" ref="purchase_requisition.purchase_order_form_inherit"/>
         <field name="arch" type="xml">
                <field name="partner_id"  position="attributes">
                    <attribute name="domain">[('supplier_rank','!=','0')]</attribute>
                           
                </field>
          
         </field>
     </record>
     <!-- views/your_model_view.xml -->

     <record id="inherit_view_purchase_order" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
   <field name="model">purchase.order</field>
   <field name="inherit_id" ref="purchase.purchase_order_form" />
   <field name="arch" type="xml">
   <xpath expr="//field[@name='date_planned']" position="attributes">    
             <attribute name="string">Final Receipt Date</attribute>
       </xpath>
      
       </field>
       </record>

       <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="arch" type="xml">
            <form string="Purchase Order">
                <sheet>
                    <!-- <group>
                        <field name="partner_id"/>
                        <field name="date_order" string="Order Date"/>
                    
                    </group> -->
                    <notebook>
                        <page string="Order Lines">
                            <field name="order_line">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="product_qty"/>
                                    <field name="po_date" string="Receipt Date"/>
                                    <field name="price_unit"/>
                                    <field name="taxes_id"/>
                                </tree>
                            </field>
                        </page>
                        <!-- Other pages -->
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
      
