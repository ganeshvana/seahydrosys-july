<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form_inherit_stockaa" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.stock</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='move_type']" position="before">
                <field name="supplier_ref"/>
                <field name="buyer_order_no"/>
                <field name="nature_of_process"/>
                <field name="despatched_through"/>
                <field name="drawing_no"/>
                <field name="motor_vehicle_no"/>
                <field name="duration_of_process"/>                
                <field name="destination"/>
                <field name="batch_id" readonly = "1"/>
            </xpath>

            <xpath expr="/form/sheet/notebook/page/field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
                <field name="weight" optional="show"/>
                <field name="gross"  optional="show"/>
                <field name="description" readonly="1"/>
            </xpath>

            <xpath expr="/form/sheet/notebook/page/field[@name='move_ids_without_package']/tree/field[@name='quantity_done']" position="after">  
                <field name="total" optional="show"/>
            </xpath>

            <xpath expr="//form/sheet/group/group[2]/field[@name='origin']" position="after">
                <field name="fcl_weight"/>
                <field name="done_total"/>
            </xpath>

            <field name="user_id" position="attributes">
                    <attribute name="readonly">False</attribute>
                </field>
        </field>
    </record>


        <record id="view_move_line_tree_stock_move" model="ir.ui.view">
            <field name="name">stock.move.line.tree.grouped.sales.purchase</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
            <field name="arch" type="xml">
                <field name="owner_id" position="attributes"><attribute name="optional">hide</attribute></field>
                <field name="result_package_id" position="attributes"><attribute name="optional">hide</attribute></field>
            </field>
        </record>
