<?xml version="1.0" encoding="utf-8"?>
<odoo>
 

    <!-- Stock stages -->


        <record id="stock_picking_approve_form" model="ir.ui.view">
            <field name="name">stock.picking.approve.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group[2]/field[@name='origin']" position="after">
                    <field name="is_pc"/>
                </xpath>

                <xpath expr="//form/header/field[@name='state']" position="replace">
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,assigned,approved_for_done,done" />
                </xpath>

                <xpath expr="//form/header/button[@name='button_validate']" position="replace">
                    <button name="button_validate" attrs="{'invisible': ['|', '|',('state', 'in', ('waiting','confirmed')), ('show_validate', '=', False),('picking_type_id','in',(12))]}" string="Validate" type="object" class="oe_highlight" groups="stock.group_stock_user" data-hotkey="v"/>
                </xpath>

                <xpath expr="//form/header/button[@name='button_validate']" position="after">
                    <button name="action_to_approve" attrs="{'invisible': ['|', '|',('state', 'in', ('draft','waiting','confirmed')), ('show_validate', '=', False),('picking_type_id','not in',(12)),('is_pc','=',False)]}" string="Approve" type="object" groups="stock.group_stock_user" class="o_btn_validate" />
                    <button name="button_validate_new" attrs="{'invisible': [('state', '!=', 'approved_for_done')]}" string="Validate" type="object" class="oe_highlight" groups="stock.group_stock_user" data-hotkey="v"/>
                </xpath>

                <xpath expr="//form/sheet/notebook/page[@name='operations']/field[@name='move_ids_without_package']/tree/field[@name='product_id']" position='after'>
                    <field name='product_reference'/>
                </xpath>
            </field>
        </record>

    <!-- Stock stages - Receipts-->


    <record id="stock_picking_receipt_approve" model="ir.ui.view">
        <field name="name">stock.picking.receipt.approve</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <xpath expr="//form/header/button[@name='button_validate']" position="replace">
                
                <button name="button_validate" attrs="{'invisible': ['|', '|',('state', 'in', ('waiting','confirmed')), ('show_validate', '=', False),('picking_type_id','in',(1,12))]}" string="Validate" type="object" class="oe_highlight" groups="stock.group_stock_user" data-hotkey="v"/>
                
            </xpath>


        </field>
    </record>


</odoo>





