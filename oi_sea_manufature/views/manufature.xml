<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_production_miscellaneous_inherit" model="ir.ui.view">
        <field name="name">mrp.production.miscellaneous.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='miscellaneous']" position="inside">
                <sheet>
                    <form>
                        <group>
                            <group>
                            <field name="sea_delivery_date"/>
                            <field name="sea_batch_no"/>
                        </group>
                    </group>
                    </form>
                    </sheet>

            </xpath>
            
        </field>
    </record>
       <record id="view_mrp_production_tree_inherit" model="ir.ui.view">
        <field name="name">view_mrp_production_tree_inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='lot_producing_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='origin']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
            <field name="sea_batch_no" optional="hide"></field>
            <field name="sea_delivery_date" optional="hide"></field>
            </xpath>
            <xpath expr="//field[@name='origin']" position="after">
                <field name="tag_ids" optional="hide" widget='many2many_tags'/>
            </xpath>
        </field>
    </record>
    <record id="view_mrp_production_filter_inherit" model="ir.ui.view">
        <field name="name">view_mrp_production_filter_inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.view_mrp_production_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search/field[@name='product_id']" position="after">
                <field name="sea_batch_no"/>
            </xpath>
        </field>
    </record>
</odoo>
