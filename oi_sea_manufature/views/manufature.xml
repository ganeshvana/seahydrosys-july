<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_production_miscellaneous_inherit" model="ir.ui.view">
        <field name="name">mrp.production.miscellaneous.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='miscellaneous']" position="inside">
                <sheet>
                    <form>
                        <group>
                            <group>
                            <field name="sea_delivery_date"/>
                            <field name="sea_batch_no"/>
                        </group>
                    </group>
                    </form>
                    </sheet>

            </xpath>
        </field>
    </record>
</odoo>
