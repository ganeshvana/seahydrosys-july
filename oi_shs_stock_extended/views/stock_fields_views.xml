<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form_inherit_stock" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.stock</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook/page[@name='extra']/group/group[@name='other_infos']/field[@name='move_type']" position="after">
                <field name="supplier_ref"/>
                <field name="drawing_no"/>
                <field name="customer_reference" readonly = "0"/>
            </xpath>

            <xpath expr="//form/sheet/div[@name='button_box']" position="inside">
                <button name="action_view_inspection" string="Inspection" type="object" class="oe_stat_button" icon="fa-list"
                    attrs="{'invisible':[('picking_type_code','=','outgoing')]}"/>

            </xpath>

            <xpath expr="//form/sheet/group/group[2]/field[@name='origin']" position="after">
                <field name="vendor" attrs="{'invisible':[('picking_type_code','!=','internal')]}"/>
            </xpath>

         
        </field>
    </record>

   

</odoo>
