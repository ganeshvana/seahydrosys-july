<!-- views/report_template.xml -->
<odoo>
    <template id="report_custom_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <table class="table table-sm table-bordered">
                    <thead>
                        <tr>
                            <th colspan="8" style="text-align: center; background-color: #007bff; color: white;">KMBL</th>
                        </tr>
                        <tr style="background-color: #28a745; color: white;">
                            <th colspan="2" style="text-align: center;">Data Entry</th>
                            <th colspan="2" style="text-align: center;">Slip Balance</th>
                            <th colspan="2" style="text-align: center;">Review (L1)</th>
                            <th rowspan="2" style="text-align: center; background-color: #ffcc99;">Total No. Of Working Days</th>
                            <th rowspan="2" style="text-align: center;">Total Amt.</th>
                            <th rowspan="2" style="text-align: center; background-color: #add8e6;">Data Recharge Cost</th>
                        </tr>
                        <tr>
                            <th style="text-align: center;">Count</th>
                            <th style="text-align: center;">Amount</th>
                            <th style="text-align: center;">Count</th>
                            <th style="text-align: center;">Amount</th>
                            <th style="text-align: center;">Count</th>
                            <th style="text-align: center;">Amount</th>
                            <th style="text-align: center;">June</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td t-esc="doc.data_entry_count"/>
                            <td t-esc="doc.data_entry_amount"/>
                            <td t-esc="doc.slip_balance_count"/>
                            <td t-esc="doc.slip_balance_amount"/>
                            <td t-esc="doc.review_count"/>
                            <td t-esc="doc.review_amount"/>
                            <td t-esc="doc.total_working_days"/>
                            <td t-esc="doc.total_amount"/>
                            <td t-esc="doc.data_recharge_cost_june"/>
                        </tr>
                    </tbody>
                </table>
            </t>
        </t>
    </template>
</odoo>
