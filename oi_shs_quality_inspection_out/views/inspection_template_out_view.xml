<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_inspection_template_out_form">
            <field name="name">view.inspection.template.out.form</field>
            <field name="model">inspection.template.out</field>
            <field name="arch" type="xml">
                <form string="Inspection">
                    <!-- <header >
                        <button name="action_confirm_transfer" states="draft" string="Validate" type="object" class="oe_highlight"/>
                        
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header> -->
                    <sheet>
                        <h1>
                            <field name="name" force_save="1"/>
                        </h1>
                       
                        <notebook>
                        <page name="Lines" string="Out Template Lines">
                            <field name="out_template_line_ids" widget="one2many">
                                <tree editable="bottom">
                                    <field name="description"/>
                                    <field name="specification"/>
                                    <!-- <field name="tolerance"/> -->
                                    <field name="range_one"/>
                                    <field name="range_two"/>
                                    <field name="inspection_method"/>
                                   
                                </tree>
                            </field>
                        </page>
                        <page name="Lines" string="Out Template1 Lines">
                            <field name="out_template1_line_ids" widget="one2many">
                                <tree editable="bottom">
                                    <field name="description"/>
                                    <field name="specification"/>
                                    <!-- <field name="tolerance"/> -->
                                    <field name="range_one"/>
                                    <field name="range_two"/>
                                    <field name="inspection_method"/>
                                   
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    </sheet>
                    <!-- <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div> -->
                </form>
            </field>
        </record>

        <record id="view_inspection_template_out_tree" model="ir.ui.view">
            <field name="name">view.inspection.template.out.tree</field>
            <field name="model">inspection.template.out</field>
            <field name="arch" type="xml">
                <tree string="Inspection Template">
                    <field name="name"/>
                    
                </tree>
            </field>
        </record>

        
       
        <record id="action_view_inspection_template_out" model="ir.actions.act_window">
            <field name="name">Inspection Template Out</field>
            <field name="res_model">inspection.template.out</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_inspection_template_out_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new record
                </p>
            </field>
        </record>
       
         

         <!-- <menuitem id="menu_parent_inspection" name="Inspection" parent="quality_control.menu_quality_configuration" sequence="30"/> -->

         <menuitem action="action_view_inspection_template_out" id="menu_inspection_template_out" name="Out Inspection Template" sequence="2" parent="oi_shs_quality_inspection.menu_parent_inspection"/>


       
    </data>
</odoo>
