<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_inspection_out_form">
            <field name="name">view.inspection.out.form</field>
            <field name="model">quality.inspection.out</field>
            <field name="arch" type="xml">
                <form string="Inspection">

                    <header>
                        <button name="action_confirm" states="draft" string="Confirm" type="object" groups="stock.group_stock_manager,stock.group_stock_user"/>
                        <button name="action_cancel" states="draft,confirm" string="Cancel" type="object" groups="stock.group_stock_manager,stock.group_stock_user"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                    </header>
                        <sheet>

                        <h1>
                            <field name="name" force_save="1"/>
                        </h1>
                        <group>
                            <group>
                                <!-- <field name="from_dates" attrs="{'readonly': [('state', '=', 'done')]}"/> -->
                                <field name="picking_type_code" invisible="1"/>
                                <field name="picking_id" domain="['&amp;',('picking_type_code','=','outgoing'),('state','=','done')]" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="partner_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="deliver_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="product_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="categ_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>

                                <field name="description" attrs="{'readonly': [('state', '!=', 'draft')]}"/>

                                <!-- <field name="total_qty" force_save="1"/> -->
                                <field name="inspection_qty" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="inv_no_date" force_save="1"/>
                                <field name="defect_remarks"/>
                                <field name="osn_qty" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="msn_qty" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="process_qty" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="rm_supplier_id"/>

                                <field name="out_template_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                            <group>
                                
                                <field name="drawing_no" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="inspected_by" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <!-- <field name="shift" attrs="{'readonly': [('state', '!=', 'draft')]}"/> -->
                                <field name="scheduled_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>

                                <field name="inspection_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="lot_qty" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="wo_no" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="sl_no_from" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="sl_no_to" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="po_no"/>

                                <!-- <field name="corrective_action" attrs="{'invisible': [('corrective_test', '!=', 'yes')],'readonly': [('state', '!=', 'draft')]}"/> -->
                                <field name="company_id" invisible="1"/>
                                <field name="osn_description" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="msn_description" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="process_description" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="result"/>
                            </group>
                        </group>
                        <notebook>
                        <page name="Lines" string="Inspection Out Lines">
                            <button name="action_update_status" string="Update Status" type="object" groups="stock.group_stock_manager,stock.group_stock_user"/>
                            <field name="out_inspection_line_ids" force_save="1" widget="one2many" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                <tree editable="bottom" delete="false">
                                    <field name="description" force_save="1"/>
                                    <field name="specification" force_save="1"/>
                                    <!-- <field name="tolerance" force_save="1"/> -->
                                    <field name="range_one" force_save="1"/>

                                    <field name="range_two" force_save="1"/>
                                    <field name="inspection_method" force_save="1"/>
                                    <field name="s1"/>
                                    <field name="s2"/>
                                    <field name="s3"/>
                                    <field name="s4"/>
                                    <field name="s5"/>
                                    
                                    <field name="remarks"/>
                                    <field name="state"/>
                                </tree>
                               
                            </field>
                        </page>
                        <page name="Lines" string="Inspection1 Out Lines">
                           
                            <field name="out_inspection1_line_ids" force_save="1" widget="one2many" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                <tree editable="bottom" delete="false">
                                    <field name="description" force_save="1"/>
                                    <field name="specification" force_save="1"/>
                                    <!-- <field name="tolerance" force_save="1"/> -->
                                    <field name="range_one" force_save="1"/>

                                    <field name="range_two" force_save="1"/>
                                    <field name="inspection_method" force_save="1"/>
                                    <field name="s1"/>
                                    <field name="s2"/>
                                    <field name="s3"/>
                                    <field name="s4"/>
                                    <field name="s5"/>
                                    
                                    <field name="remarks"/>
                                    <field name="state"/>
                                </tree>
                               
                            </field>
                        </page>
                    </notebook>
                        
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <!-- <field name="activity_ids" widget="mail_activity"/> -->
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_inspection_out_tree" model="ir.ui.view">
            <field name="name">view.inspection.out.tree</field>
            <field name="model">quality.inspection.out</field>
            <field name="arch" type="xml">
                <tree string="Inspection Out">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="categ_id"/>
                    <field name="partner_id"/>
                    <field name="picking_id"/>
                    <field name="deliver_date"/>
                    <!-- <field name="total_qty"/> -->
                    <field name="inspection_qty"/>
                    <field name="lot_qty"/>
                </tree>
            </field>
        </record>

       
      
        <record id="seq_quality_inspection_out" model="ir.sequence">
            <field name="name">Quality Inspection Out</field>
            <field name="code">quality.inspection.out</field>
            <field name="prefix">QIO</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>


        <record id="action_view_inspection_out" model="ir.actions.act_window">
            <field name="name">Inspection Out</field>
            <field name="res_model">quality.inspection.out</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_inspection_out_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new record
                </p>
            </field>
        </record>

        
         <menuitem action="action_view_inspection_out" id="menu_inspection_out" name="Inspection Out" sequence="60" parent="quality_control.menu_quality_control"/>


         <record id="stock_picking_tree_inherit_view_out" model="ir.ui.view">
            <field name="name">Stock Picking Tree View Inherit Out</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <xpath expr="/tree/field[@name='state']" position="after">
                    <field name="out_inspection_status"/>
                </xpath>
                
            </field>
        </record>

        <record id="stock_picking_form_inherit_view_out" model="ir.ui.view">
            <field name="name">Stock Picking form View Inherit Out</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page/group/group/field[@name='group_id']" position="after">
                    <field name="out_inspection_status"/>
                </xpath>
                
            </field>
        </record>

        <record id="action_picking_out" model="ir.actions.act_window">
            <field name="name">Inspection Out Status</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.picking</field>
            <field name="domain">['&amp;',('picking_type_code','=','outgoing'),('state','=','done')]</field>
            <field name="view_mode">tree,form</field>
          
        </record>

        <menuitem id="menu_out_view"
            name="Inspection Out Status"
            action="action_picking_out"
            parent="quality_control.menu_quality_control"
            sequence="50"/>



        
    </data>
</odoo>
