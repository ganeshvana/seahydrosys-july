<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_leap_wizard_create_split_delivery_order_form" model="ir.ui.view">
        <field name="name">view.leap.wizard.create.split.delivery.order.form</field>
        <field name="model">leap.split.delivery.order</field>
        <field name="arch" type="xml">
            <form string="Split Transfer" create="false">
                <sheet>
                    <field name="split_delivery_lines" create="false">
                        <tree editable="bottom" create="false">
                            <field name="line_id" invisible="1"/>
                            <field name="product_id" readonly="1" force_save="1"/>
                            <field name="demand"/>
                        </tree>
                        <form create="0" delete="0">
                            <sheet>
                                <group>
                                    <group>
                                        <field name="line_id" invisible="1"/>
                                        <field name="product_id" readonly="1" force_save="1"/>
                                        <field name="demand"/>
                                    </group>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </sheet>

                <footer>
                    <button name="button_action_split_delivery_order" type="object" string="Split Transfer"
                            class="oe_highlight"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
