<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- sale -->
        <record id="sale_order_no_create_view" model="ir.ui.view">
            <field name="name">sale.order.no.create.view.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_create_edit': True,"no_create": True}</attribute>
                </xpath>
            </field>
        </record>



        <record model="ir.ui.view" id="sale_product_create_edit_view_form">
            <field name="name">sale.product.create.edit.view.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="groups_id" eval="[(6, 0, [ref('oi_create_edit_access.group_sale_customer_create_edit_enable')])]"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_create_edit': False, 'no_create': False}</attribute>
                </xpath>
            </field>
        </record> 

        <record model="ir.ui.view" id="sale_order_no_open">
            <field name="name">sale.order.no.open</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group[1]/field[@name='partner_id']" position="attributes">
                    <attribute name="options">{'no_open': True}</attribute>
                </xpath>
            </field>
        </record> 


